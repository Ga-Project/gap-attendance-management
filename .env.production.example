# Database Configuration
POSTGRES_DB=attendance_production
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_database_password_here

# Rails Configuration
SECRET_KEY_BASE=your_secret_key_base_here_generate_with_rails_secret
RAILS_ENV=production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_generate_random_string

# Frontend Configuration
REACT_APP_API_URL=http://localhost/api
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here

# Port Configuration
FRONTEND_PORT=80

# Optional: Redis Configuration (if using Redis for caching)
REDIS_URL=redis://redis:6379/0

# Security Settings
RAILS_FORCE_SSL=false
RAILS_LOG_LEVEL=info

# Backup Configuration (optional)
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30